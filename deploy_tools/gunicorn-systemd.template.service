[Unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=mathieum
WorkingDirectory=/home/mathieum/sites/SITENAME/source
ExecStart=/home/mathieum/sites/SITENAME/virtualenv/bin/gunicorn \
	--bind unix:/temp/SITENAME.socket \
	superlists.wsgi:application

[Install]
WantedBy=multi-user.target
